html, body, form, fieldset, img
  padding: 0
  margin: 0
  border: 0

a, a:visited
  color: #8d8d8d

a:hover
  color: #222

body
  font-family: font-sans
  font-size: font-size
  font-weight: font-sans-weight
  background: #ccc

#header
  position:relative


#nav-top
  a
    line-height:50px
    vertical-align:middle
    padding: 0px 16px
  .logo
    font-size: 1.2em
    color: #999

#sidebar
  position:relative

  .avatar
    display:block
    text-align:center
    line-height: 216px
    img
      vertical-align:middle

  .nav a
    display:block
    text-decoration:none
    padding: 8px 16px
    font-size: 1.1em
    color: #555
    &.active, &:hover
      color: #fff

#content
  background: #fff
  min-height: 480px

#footer
  clear:both
  padding: 8px 16px
  font-size: 13px
  color: #bbb

#topnav
  position:relative
  border-bottom:1px solid #ccc
  min-height:16px
  line-height:16px
  font-size: 13px
  padding: 4px 8px
  code
    font-size: 12px
  .controls
    position:absolute
    top:4px
    right:8px
    a
      display:inline-block
      text-decoration:none
      color: #777

@media screen and (min-width:480px)
  #sidebar
    width:216px
    float:left
  #content
    margin-left:216px