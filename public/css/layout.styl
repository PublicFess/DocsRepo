html, body, form, fieldset, img
  padding: 0
  margin: 0
  border: 0

a, a:visited
  color: #aaa
  text-decoration:none

a:hover
  color: #444

a.active
  color: #444
  text-decoration:underline

body
  font-family: font-sans
  font-size: font-size
  font-weight: font-sans-weight
  background: #ccc
  background-image: url('/img/bg/png.png')
  margin:16px

#header
  position:relative
  box-shadow: 5px 5px 10px -3px rgba(0,0,0,0.5);

#frame
  margin-left:232px

#nav-top
  border: 1px solid #aaa
  background: #fff
  height: 60px
  width:100%
  >a, >span
    line-height:60px
    vertical-align:middle
    font-size: 1.1em
    padding: 0px 16px
  .logo
    display: block
    float: left
    width: 184px
    font-size: 1.2em
    color: #999

#sidebar
  border: 1px solid #aaa;
  position:relative
  background:#fff
  padding-bottom:8px
  box-shadow: 5px 5px 10px -3px rgba(0,0,0,0.5);
  .avatar
    display:block
    text-align:center
    width:184px
    height:184px
    img
      vertical-align:middle
  .nav a
    display:block
    text-decoration:none
    padding: 8px 16px
    font-size: 1.1em

#content
  background: #fff
  min-height: 480px
  border: 1px solid #aaa;
  box-shadow: 5px 5px 10px -3px rgba(0,0,0,0.5);
  &:before
    display:block
    content: ""

#footer
  clear:both
  padding: 8px 16px
  font-size: 13px
  color: #bbb

#topnav
  position:relative
  border-bottom:1px solid #ccc
  min-height:16px
  line-height:16px
  font-size: 13px
  padding: 4px 8px
  code
    font-size: 12px
  .controls
    position:absolute
    top:4px
    right:8px
    a
      display:inline-block
      text-decoration:none
      color: #777

.black-back2
  background: rgba(0,0,0,.2)

#wrap-doc
  position:relative

#left-side,
#right-side
  position: absolute
  width: 50%
  overflow: auto

#right-side
  right:0

@media screen and (min-width:480px)
  #sidebar
    width:216px
    float:left
